{
  "name": "@thednp/shorty",
  "version": "2.0.0alpha4",
  "description": "TypeScript shorties for the web",
  "source": "./src/index.ts",
  "main": "./dist/shorty.js",
  "types": "./dist/shorty.d.ts",
  "module": "./dist/shorty.mjs",
  "exports": {
    ".": {
      "import": "./dist/shorty.mjs",
      "require": "./dist/shorty.cjs",
      "types": "./dist/shorty.d.ts"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "pre-test": "npm run clean-coverage",
    "test": "npm run pre-test && npx cypress run",
    "clean": "rimraf dist",
    "clean-coverage": "rimraf coverage .nyc_output",
    "cypress": "npm run pre-test && npx cypress open",
    "coverage:report": "nyc report --reporter=lcov --reporter=json --reporter=text --reporter=json-summary",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint:ts": "tslint -p tsconfig.json",
    "build": "npm run clean && tsc && vite build && dts-bundle-generator --config ./dts.config.ts"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thednp/shorty.git"
  },
  "keywords": [
    "shorty",
    "javascript",
    "typescript"
  ],
  "author": "dnp_theme",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thednp/shorty/issues"
  },
  "homepage": "https://github.com/thednp/shorty",
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.3",
    "@cypress/code-coverage": "^3.10.0",
    "@testing-library/cypress": "^8.0.3",
    "@types/istanbul-lib-instrument": "^1.7.4",
    "cypress": "^10.6.0",
    "dts-bundle-generator": "^6.12.0",
    "esbuild": "^0.14.30",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-instrument": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.9"
  }
}
