{
  "name": "@thednp/shorty",
  "version": "2.0.0alpha3",
  "description": "TypeScript shorties",
  "main": "src/index.ts",
  "esmodule": "dist/shorty.js",
  "esnext": "src/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "src",
    "types"
  ],
  "scripts": {
    "pre-test": "npm run clean-coverage && npx tsc",
    "test": "npm run pre-test && npx cypress run",
    "clean": "del-cli --force dist",
    "clean-coverage": "del-cli --force coverage .nyc_output",
    "cypress": "npm run pre-test && npx cypress open",
    "coverage:report": "nyc report --reporter=lcov --reporter=json --reporter=text --reporter=json-summary",
    "format": "prettier --write \"src/**/*.ts\"",
    "fix:ts": "tslint -p tsconfig.json --fix",
    "lint:ts": "tslint -p tsconfig.json",
    "build:ts": "del-cli --force ./types && tsc -d --removeComments --emitDeclarationOnly --outDir ./types",
    "build": "npm run lint:ts && npm-run-all --parallel cjs cjsmin esm esmmin iife iifemin",
    "cjs": "node esbuild.config.js FORMAT:cjs",
    "cjsmin": "node esbuild.config.js FORMAT:cjs MIN:true",
    "esm": "node esbuild.config.js",
    "esmmin": "node esbuild.config.js MIN:true",
    "iife": "node esbuild.config.js FORMAT:iife",
    "iifemin": "node esbuild.config.js MIN:true FORMAT:iife"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thednp/shorty.git"
  },
  "keywords": [
    "shorty",
    "javascript",
    "typescript"
  ],
  "author": "dnp_theme",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thednp/shorty/issues"
  },
  "homepage": "https://github.com/thednp/shorty",
  "devDependencies": {
    "@bahmutov/cypress-esbuild-preprocessor": "^2.1.3",
    "@cypress/code-coverage": "^3.10.0",
    "@testing-library/cypress": "^8.0.3",
    "@types/istanbul-lib-instrument": "^1.7.4",
    "cypress": "^10.6.0",
    "esbuild": "^0.14.30",
    "istanbul-lib-coverage": "^3.2.0",
    "istanbul-lib-instrument": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  }
}
